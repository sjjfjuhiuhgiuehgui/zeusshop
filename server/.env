# MySQL (brew 安裝的 MySQL 預設 port 是 3306)
DB_DSN=shop:shop@tcp(127.0.0.1:3306)/shop?charset=utf8mb4&parseTime=True&loc=Local

# Redis (brew 安裝後預設跑在 6379)
REDIS_ADDR=127.0.0.1:6379

# Gin server port
PORT=8080

# Admin token (後台 API 驗證用，建議換掉這個值)
ADMIN_TOKEN=change-me-secret

# CORS 設定 (前端 Vite 預設 http://localhost:5173)
CORS_ORIGINS=http://localhost:5173
